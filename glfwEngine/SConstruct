src = Split('''
opengl/glfuncs.d
opengl/gltypes.d
opengl/glfw.d
''')

src += Split('''
src/main.d
src/slog.d
src/window.d
src/shader.d
''')

env = Environment()
env.Program("dngine", src, DFLAGS = Split("-unittest -gc -g -Igl3n/import -Isrc"), LIBPATH="gl3n/lib/", LIBS=["pthread", "rt", "phobos2", "GL", "glfw", "gl3n-dmd"])
